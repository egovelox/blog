{% extends "./base.njk" %}

{% block body %}
  <section>
    <header class="indexTitle">
      <h1 >Nugae </h1><span> -arum, f., bagatelles, riens, sornettes...</span>
    </header>

    <ul id="indexList">
    {% for post in posts %}
      <li class="indexItem">
        <a id="indexLink" href="{{ post.slug }}"><span class="indexPostDate">{{ post.date }}</span><span class="indexPostTitle">{{ post.title }}</span></a>
      </li>
    {% endfor %}
    </ul>

  </section>
{% endblock %}